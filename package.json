{
  "name": "trophy-hunter",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "client:dev": "next dev",
    "server:build": "tsc --project tsconfig.server.json",
    "server:dev": "ts-node-dev --project tsconfig.server.json src/server",
    "build": "npm run server:build",
    "build:overwolf": "TARGET=OVERWOLF next build && TARGET=OVERWOLF next export -o overwolf/build",
    "prepare": "husky install",
    "start": "node build/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmachens/trophy-hunter.git"
  },
  "author": "Leon Machens",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lmachens/trophy-hunter/issues"
  },
  "homepage": "https://github.com/lmachens/trophy-hunter#readme",
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.4.0",
    "@emotion/server": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "ajv": "^8.6.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "isomorphic-unfetch": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.9",
    "mongodb-cron": "^1.7.1",
    "next": "^11.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-lottie": "^1.2.3",
    "react-markdown": "^6.0.2",
    "react-query": "^3.18.1"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.3.0",
    "@overwolf/types": "^3.3.0",
    "@types/express": "^4.17.13",
    "@types/mongodb": "^3.6.19",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "concurrently": "^6.2.0",
    "eslint": "^7.30.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
